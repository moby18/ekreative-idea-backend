{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Idea list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Price</th>
                <th>Category</th>
                <th>Comments</th>
                <th>Likes</th>
                <th>Dislikes</th>
                <th>Status</th>
                <th>Video</th>
                <th>Audio</th>
                <th>Author</th>
                <th>User</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('idea_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.price }}</td>
                <td>{{ entity.category }}</td>
                <td>{{ entity.comments }}</td>
                <td>{{ entity.likes }}</td>
                <td>{{ entity.dislikes }}</td>
                <td>{{ entity.status }}</td>
                <td>{{ entity.video }}</td>
                <td>{{ entity.audio }}</td>
                <td>{{ entity.author }}</td>
                <td>{{ entity.user }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('idea_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('idea_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('idea_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
